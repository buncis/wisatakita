.row
    .col-md-5.col-md-offset-4
      .panel.panel-default.panel-v2
        .panel-heading
          h4.panel-title Forgot your Password ?
        .panel-body
          =form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| 
            .form-group
              label.col-sm-2.control-label for="inputEmail"  Email
              .col-sm-10
                =f.email_field :email, :class => "form-control", :autofocus=> true
                br
            .form-group
              .col-sm-offset-2.col-sm-10
                =f.submit "Send me reset password instructions"
                =render "admins/shared/links"    
